# Optimized LLM Service using shared base image
FROM meshag-base:latest AS builder

# Copy actual source code
COPY . .

# Build the LLM service (dependencies already built in base)
RUN cargo build --release -p llm-service

# Runtime stage - using distroless for minimal size and security
FROM gcr.io/distroless/cc-debian12:nonroot

# Copy binary from builder
COPY --from=builder /app/target/release/llm-service /usr/local/bin/llm-service

# Expose port
EXPOSE 8082

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD ["/usr/bin/wget", "--quiet", "--tries=1", "--spider", "http://localhost:8082/health"]

# Run the service
CMD ["/usr/local/bin/llm-service"]
